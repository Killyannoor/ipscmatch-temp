generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Match {
  id             Int        @id @default(autoincrement())
  name           String
  description    String?
  email          String   @unique
  phone          String?
  website        String?
  startDate      DateTime?
  endDate        DateTime?
  location       String
  country        String
  logoPath       String?
  weaponType     String
  signupDeadline DateTime
  level          String
  capacity       Int
  squads         Squad[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Squad {
  id        Int      @id @default(autoincrement())
  name      String
  matchId   Int
  capacity   Int
  startTime  DateTime
  endTime    DateTime
  match     Match    @relation(fields: [matchId], references: [id])
  matchRegistrations MatchRegistration[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id            Int      @id @default(autoincrement())
  memberName    String   @unique
  realName      String
  npsaId        String?  @unique 
  password      String
  email         String   @unique
  phone         String?
  registrations MatchRegistration[]
}

model MatchRegistration {
  id         Int      @id @default(autoincrement())
  playerId   Int
  player     Player   @relation(fields: [playerId], references: [id])
  squadId    Int?
  squad      Squad?   @relation(fields: [squadId], references: [id])
  isPaid      Boolean?  @default(false)
  level       String?
  powerFactor String?
  division    String?
  category    String?
  note        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([playerId, squadId])
}

